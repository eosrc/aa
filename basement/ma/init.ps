%!

/Grundschrift-Normal findfont	% Get the basic font
20 scalefont		% Scale the font to 20 points
setfont			% Make it the current font

/filesize { status 
    { pop pop == pop } 
    {(file not found) == } 
  ifelse } 
def

/graypage {
newpath
.1 setgray
0 0 612 792 rectfill
.95 setgray
0 0 moveto
306 396 translate
0 0 moveto
} def

/shgp { showpage graypage } def

% procedure to draw a cross 
% with the foot a the origin
/dcross {
0 0 moveto
0 100 lineto stroke
-40 75 moveto
40 75 lineto stroke
0 0 moveto
} def

/ecross { % erase the cross at the origin
gsave
3 setlinewidth
.1 setgray
0 0 moveto
0 100 lineto stroke
-40 75 moveto
40 75 lineto stroke
.95 setgray
1 setlinewidth
grestore
} def

graypage
